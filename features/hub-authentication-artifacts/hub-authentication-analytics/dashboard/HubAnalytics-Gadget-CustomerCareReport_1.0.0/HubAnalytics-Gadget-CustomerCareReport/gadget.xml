    <UserPref name="refreshInterval"
              display_name="Refresh Interval"
              default_value="1000000"/>

    <Content type="html">
        <![CDATA[
        <head>
            <!-- chart specific css -->
            <link href="../HubAnalytics-Gadget-Commons/css/dataTables.bootstrap.css" rel="stylesheet" type="text/css">

            <!-- jQuery -->
